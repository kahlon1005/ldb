package com.bcldb.helper;

import java.util.ArrayList;
import java.util.List;

import com.bcldb.dto.TransactionDto;
import com.bcldb.model.InventoryEntity;

public class DTOConverter {
	
	private static final String WAVE_TRANSACTION_TYPE = "WAVE";
	private static final String ORDER_TRANSACTION_TYPE = "ORDER";

	public List<TransactionDto> convertInventoryEntityToTransactionDto(List<InventoryEntity> entities) {
		List<TransactionDto> dtos =  new ArrayList<TransactionDto>();
		for(InventoryEntity entity:entities) {
			TransactionDto dto = new TransactionDto();
			dto.setOrderNumber(entity.getOrder());
			dto.setOrderType(ORDER_TRANSACTION_TYPE);
			dto.setMessage("Inventory Stuck in TRUCK location");
			dtos.add(dto);
		}
		return dtos;
	}

	public List<TransactionDto> convertWaveTransactions(List<TransactionDto> waves) {
		List<TransactionDto> dtos = new ArrayList<TransactionDto>();
		for (TransactionDto wave : waves) {
			TransactionDto dto = new TransactionDto();
			dto.setOrderNumber(wave.getOrderNumber());
			dto.setOrderType(WAVE_TRANSACTION_TYPE);
			dto.setMessage(wave.getMessage());
			dtos.add(dto);
		}
		
		return dtos;
	}
	
	

}
